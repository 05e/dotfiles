configuration {
	modi:	"drun";
	font:	"JetBrains Mono 10";
	show-icons: false;
	display-drun: "";
	drun-display-format: "{name}";
	sidebar-mode: false;
}

@theme "/dev/null"

* {
	bg: #141b1e;
	fg: #dadada;
	accent: #232a2d;
	button: #232a2d;
	background-color: @bg;
	text-color:	@fg;
}

window {
	border-radius: 10px;
	width: 50%;
	padding: 25px;
}

prompt {
	background-color: @button;
	enabled: true;
	padding: 0.5% 32px 0% 0.5%;
	font: "JetBrains Mono 10";
}

entry {
    placeholder: "Search";
    background-color: @button;
    placeholder-color: @fg;
    expand: true;
    padding: 0.3% 0% 0% 0%;
}

inputbar {
	children:			[ prompt, entry ];
    	background-color:               @button;
    	expand:                         false;
    	border-radius:                  6px;
    	margin:                         0%;
    	padding:                        10px;
}

listview {
    columns: 1;
    lines: 8;
    cycle: false;
    dynamic: true;
    layout: vertical;
}

mainbox {
    children: [ inputbar, listview ];
    spacing: 2%;
    padding: 2% 1% 2% 1%;
}

element {
    orientation: vertical;
    padding: 2% 0% 2% 0%;
}

element-icon {
    size: 48px;
    horizontal-align: 0.5;
}

element-text {
    expand: true;
}

element-text {
	background-color: inherit;
	text-color:	inherit;
}

element selected {
    background-color: @button;
    border-radius: 6px;
}

